<div class="post-container">
    <div class="post-content single-post">
        <h3><%= news.title %></h3>
        <div class="post-information">
        <span>
            <i class="fa fa-tags" aria-hidden="true"></i>
            <a href='/category/<%= news.category.slug %>'><%= news.category.name %></a>
        </span>
        <span>
            <i class="fa fa-user" aria-hidden="true"></i>
            <a href='/author/<%= news.author.id %>'><%= news.author.fullname %></a>
        </span>
        <span>
            <i class="fa fa-calendar" aria-hidden="true"></i>
            <%= new Date(news.createdAt).toDateString() %>
        </span>
        </div>
        <a class="single-feature-image" href="/single/<%= news.id %>"><img src="/uploads/<%= news.image %>" alt=""/></a>        
        <p class="description">
            <%= news.content %>
        </p>
    </div>
</div>