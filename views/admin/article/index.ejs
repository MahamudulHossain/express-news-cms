<div class="row">
    <div class="col-md-10">
        <h1 class="admin-heading"><i class="fa fa-file-text"></i> All Articles</h1>
    </div>
    <div class="col-md-2">
        <a class="add-new" href="news/create">Add New Article</a>
    </div>
    <div class="col-md-12">
        <div id="mytable"></div>
    </div>
</div>

<script src="https://unpkg.com/tabulator-tables@5.5.2/dist/js/tabulator.min.js"></script>
<script>

    document.addEventListener("DOMContentLoaded", () => {
        new Tabulator("#mytable", {
            data: <%- JSON.stringify(news) %>,
            layout: "fitColumns",
            pagination:true,
            paginationSize:10,
            paginationSizeSelector:[2,5,10,15],
            downloadRowRange: "visible",
            placeholder:"No Data Set",
            columns:[
                {title:"S.No.", formatter:"rownum", width:100, hozAlign:"center"},
                {title:"Title", field:"title", headerFilter:"input"},
                {title:"Category", field:"category.name", headerFilter:"input"},
                {title:"Author", field:"author.fullname", headerFilter:"input"},
                {title:"Action", formatter:function(cell, formatterParams, onRendered){
                    return `<a href="news/edit/${cell.getData()._id}" class="btn btn-info"><i class="fa fa-edit">Edit</i></a>
                            <a href="javascript:void(0)" onclick="onDelete('${cell.getData()._id}')" class="btn btn-outline-danger"><i class="fa fa-trash-o"></i>Delete</a>`;
                }},
                
            ],
        });
    });

    async function onDelete(id){
        if(confirm('Are you sure?')){
            const response = await fetch(`/admin/news/delete/${id}`, {
                method: 'DELETE'
            })
            if(response.ok){
                window.location.reload();
            }
        }
    }

    
</script>

